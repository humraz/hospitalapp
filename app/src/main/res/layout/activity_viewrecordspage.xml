<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffe7e7e7">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.humraz.kisumuedu.ksapagee"
        android:background="#ffe7e7e7">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:elevation="40dp"
            android:layout_height="60dp"
            card_view:cardBackgroundColor="@color/material_blue_grey_800"
            card_view:cardCornerRadius="4dp"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="#fffff76c">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <TextView
                    android:gravity="center"
                    android:layout_width="191dp"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/textViewdate21222"
                    android:text="."

                    android:layout_alignParentRight="true"
                    android:textSize="10dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#00ffffff" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/textViewdate21"
                    android:gravity="center"
                    android:text="Patients Records"

                    android:layout_alignParentRight="true"
                    android:textSize="24dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#ffededed" />
                <TextView
                    android:layout_width="191dp"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/textViewdate2122"
                    android:text="."

                    android:layout_alignParentRight="true"
                    android:textSize="10dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#00ffffff" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="."
            android:id="@+id/textView5"
            android:layout_below="@+id/card_view"

            android:textColor="#00ffffff" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView10"
            android:textSize="15dp"

            android:layout_centerHorizontal="true" />


        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view2"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:elevation="40dp"
            android:layout_height="match_parent"

            card_view:cardCornerRadius="4dp"
            android:background="#FFFFFFFF"
            android:layout_below="@+id/textView41"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">
                <TextView
                    android:text="Populating Records"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/text"
                    android:textSize="17dp"
                    android:layout_below="@+id/textView49"
                    android:layout_alignLeft="@+id/textView49"
                    android:layout_alignStart="@+id/textView49"
                    android:layout_weight="0.56" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Please Wait.."
                    android:id="@+id/textView51"
                    android:layout_below="@+id/textView50"
                    android:layout_alignLeft="@+id/textView50"
                    android:layout_alignStart="@+id/textView50"
                    android:textColor="#ff000000"
                    android:textSize="17dp" />
            </LinearLayout>

        </android.support.v7.widget.CardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textView11"
            android:layout_below="@+id/card_view"
            android:layout_alignLeft="@+id/textView10"
            android:layout_alignStart="@+id/textView10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textView41"
            android:layout_below="@+id/textView11"
            android:layout_centerHorizontal="true" />



    </RelativeLayout>
</ScrollView>